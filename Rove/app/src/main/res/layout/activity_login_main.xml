<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.gursimransinghhanspal.rove.activity.LoginMain">

    <include
        layout="@layout/view_statusbar_underlay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="top"/>

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/color_transparent">

        <RelativeLayout
            android:id="@+id/activityLayout_loginMain_credentialsLoginButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="24dp"
            android:layout_marginTop="24dp"
            android:background="@drawable/shape_rounded_rect_border"
            android:paddingBottom="6dp"
            android:paddingEnd="12dp"
            android:paddingStart="12dp"
            android:paddingTop="6dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="@string/activityLayout_loginMain_loginText"
                android:textColor="@color/primaryTextColor"
                android:textSize="14sp"/>

        </RelativeLayout>

        <com.facebook.login.widget.LoginButton
            android:id="@+id/activityLoginMain_facebookLoginButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="24dp"
            android:visibility="gone"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="24dp"
            android:layout_marginStart="24dp"
            android:baselineAligned="false"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/julius_sans_one"
                android:text="@string/activityLayout_loginMain_welcomeText"
                android:textColor="@color/primaryTextColor"
                android:textSize="30sp"
                android:textStyle="bold"/>

            <LinearLayout
                android:id="@+id/activityLoginMain_customFacebookLoginButton"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="90dp"
                android:background="@drawable/shape_rounded_rect_filled"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:contentDescription="@string/activityLayout_loginMain_facebookSymbol_contentDescription"
                    android:src="@drawable/ic_facebook_symbol"
                    android:tint="@color/activityBackgroundColor"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:fontFamily="@font/julius_sans_one"
                    android:text="@string/activityLayout_loginMain_facebookLoginText"
                    android:textColor="@color/activityBackgroundColor"
                    android:textSize="18sp"
                    android:textStyle="bold"/>
            </LinearLayout>

            <RelativeLayout
                android:id="@+id/activityLoginMain_createAccountButton"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/shape_rounded_rect_border">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:fontFamily="@font/julius_sans_one"
                    android:text="@string/activityLayout_loginMain_signUpText"
                    android:textColor="@color/primaryTextColor"
                    android:textSize="18sp"
                    android:textStyle="bold"/>

            </RelativeLayout>

        </LinearLayout>

        <TextView
            android:id="@+id/activityLoginMain_skipLoginText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:text="@string/activityLayout_loginMain_skipLoginText"
            android:textColor="@color/primaryTextColor"
            android:textSize="15sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

    </android.support.constraint.ConstraintLayout>

    <include
        layout="@layout/view_navbar_underlay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"/>

</LinearLayout>
